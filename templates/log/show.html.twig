{% extends 'base.html.twig' %}

{% block title %}Log{% endblock %}

{% block body %}
    <h1 style="color: red">Log</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ log.createdAt ? log.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EventKey</th>
                <td>{{ log.eventKey }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('log_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('log_edit', {'id': log.id}) }}">edit</a>

    {{ include('log/_delete_form.html.twig') }}
{% endblock %}
