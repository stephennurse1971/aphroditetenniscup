{% extends '../../base.html.twig' %}

{% block title %}Market Data History{% endblock %}

{% block body %}
    <h1 style="color: red">Market Data History</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Date</th>
                <td>{{ market_data_history.date ? market_data_history.date|date('d-M-y') : '' }}</td>
            </tr>
            <tr>
                <th>MarketPrice</th>
                <td>{{ market_data_history.marketPrice }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('market_data_history_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('market_data_history_edit', {'id': market_data_history.id}) }}">Edit</a>

    {{ include('market_data_history/_delete_form.html.twig') }}
{% endblock %}
