{% extends 'base.html.twig' %}

{% block title %}UK Days{% endblock %}

{% block body %}
    <h1 style="color: red">Days in UK<a href="{{ path('uk_days_new') }}">+</a></h1>



    <table class="table">
        <thead>
        <tr>
            <th>Tax year</th>
            <th>#Days</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    Tax year
                </td>
                <td>
                    Days
                </td>

            </tr>
        </tbody>
    </table>

    <hr>


    <table class="table">
        <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th># days</th>
            <th>Travel Docs</th>
            <th>#</th>
        </tr>
        </thead>
        <tbody>
        {% for uk_day in uk_days %}
            <tr>
                <td>
                    <a href="{{ path('uk_days_edit', {'id': uk_day.id}) }}">{{ uk_day.startDate ? uk_day.startDate|date('d-M-Y') : '' }}</a>
                </td>
                <td>{{ uk_day.endDate ? uk_day.endDate|date('d-M-Y') : '' }}</td>
                <td align="right">
                    {{ uk_day.dayCount }}
                </td>
                <td>
                    {% for travelDocs in uk_day.travelDocs %}
                        <strong>
                            <a target="_blank"
                               href="{{ path('to_do_list_viewfile',{fileName:travelDocs}) }}"> {{ travelDocs }}  </a>
                        </strong>
                        <br>
                    {% endfor %}
                </td>
                <td>
                    <form method="post" action="{{ path('uk_days_delete', {'id': uk_day.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ uk_day.id) }}">
                        <button class="btn btn-outline-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 50,
                "order": [[0, 'desc', 1, 'dsc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}