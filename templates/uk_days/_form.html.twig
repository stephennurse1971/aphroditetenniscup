<style>
    .ck-editor__editable {
        min-height: 1100px;
    }
</style>

{{ form_start(form) }}
<div class="row">
    <div class="col-md-3">
        <h2></h2>
        {{ form_row(form.startDate) }}
        {{ form_row(form.endDate) }}
        {{ form_row(form.country) }}

        {#        {% if error is defined %}#}
        {#        <div class="text-danger">{{ error}} </div>#}
        {#        {% endif %}#}

        {{ form_row(form.travel1Description) }}
        {{ form_row(form.travelDocs) }}
        {% for travelDocs in uk_day.travelDocs %}
            <strong>
                <a target="_blank" href="{{ path('to_do_list_viewfile',{fileName:travelDocs}) }}"> {{ travelDocs }}  </a>
            </strong><br>
        {% endfor %}

        {% if uk_day.travelDocs is not empty %}
            <a class="btn btn-sm btn-danger" href="{{ path('ukdays_delete_attachment1',{id:uk_day.id}) }}">Delete attachment</a>
        {% endif %}

        <hr>

        {{ form_row(form.travel2Description) }}
        {{ form_row(form.travelDocs2) }}
        {% for travelDocs2 in uk_day.travelDocs2 %}
            <strong>
                <a target="_blank" href="{{ path('to_do_list_viewfile',{fileName:travelDocs2}) }}"> {{ travelDocs2 }}  </a>
            </strong><br>
        {% endfor %}
        {% if uk_day.travelDocs is not empty %}
            <a class="btn btn-sm btn-danger" href="{{ path('ukdays_delete_attachment2',{id:uk_day.id}) }}">Delete attachment</a>
        {% endif %}
        <div class="mt-1"></div>

        {{ form_row(form.comment) }}
    </div>

</div>


<button class="btn btn-success btn-sm mt-2">{{ button_label|default('Save') }}</button>
<br>
{{ form_end(form) }}

{% block additionaljs %}
    <script>
        ClassicEditor
            .create(document.querySelector('#to_do_list_description'))
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}