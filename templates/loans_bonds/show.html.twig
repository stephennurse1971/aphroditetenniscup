{% extends 'base.html.twig' %}

{% block title %}Loans Bonds{% endblock %}

{% block body %}
    <h1 style="color: red">Loans Bonds</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loans_bond.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ loans_bond.name }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ loans_bond.currency }}</td>
            </tr>
            <tr>
                <th>Notional</th>
                <td>{{ loans_bond.notional }}</td>
            </tr>
            <tr>
                <th>InterestRate</th>
                <td>{{ loans_bond.interestRate }}</td>
            </tr>
            <tr>
                <th>DrawdownDate</th>
                <td>{{ loans_bond.drawdownDate ? loans_bond.drawdownDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>RepaymentDate</th>
                <td>{{ loans_bond.repaymentDate ? loans_bond.repaymentDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_loans_bonds_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('app_loans_bonds_edit', {'id': loans_bond.id}) }}">Edit</a>

    {{ include('loans_bonds/_delete_form.html.twig') }}
{% endblock %}
