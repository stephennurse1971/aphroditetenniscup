{% extends 'base.html.twig' %}

{% block title %}UK Day Calendar{% endblock %}

{% block body %}
    <h1 style="color: red">UK Day Calendar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ uk_day_calendar.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ uk_day_calendar.date ? uk_day_calendar.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('uk_day_calendar_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('app_uk_day_calendar_edit', {'id': uk_day_calendar.id}) }}">Edit</a>

    {{ include('uk_day_calendar/_delete_form.html.twig') }}
{% endblock %}
