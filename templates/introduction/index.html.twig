{% extends 'base.html.twig' %}

{% block title %}Introduction index{% endblock %}

{% block body %}
    <h1 style="color: red">Introductory Email</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Region</th>
            <th>Area of Interest</th>
            <th>Subject</th>
            <th>Attachment</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        {% for introduction in introductions %}
            <tr>
                <td><a href="{{ path('introduction_edit', {'id': introduction.id}) }}">{{ introduction.id }}</a></td>
                <td>{{ introduction.author.fullName }}</td>
                <td>{{ introduction.region }}</td>
                <td>{{ introduction.areaOfInterest }}</td>
                <td>{{ introduction.subjectLine }}</td>
                <td>
                    {% if introduction.attachment is not empty %}
{#                        {% for introduction.attachment in introduction.attachments %}#}
                            <a title= {{ introduction.attachment }} target="_blank"
                               href="{{ path('show_attachment',{id : introduction.id,'filename':introduction.attachment}) }}"><i
                                        class="fa fa-paperclip"></i></a>
{#                        {% endfor %}#}
                    {% endif %}
                </td>
                <td>{{ introduction.introductoryEmail|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm" href="{{ path('introduction_new') }}">New</a>
{% endblock %}
