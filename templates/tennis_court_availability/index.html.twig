{% extends 'base.html.twig' %}

{% block title %}Tennis Court Availability{% endblock %}

{% block body %}
    <h1 style="color: red;">Tennis Court Availability</h1>

    <div class="row">
        <div class="col-md-8">
            {% if minDate == today|date('Y-m-d') %}
                <a class="btn btn-primary btn-sm mt-2"
                   href="{{ path('tennis_court_availability_index', {'minDate': today|date('Y-m-d'), 'maxDate': nextSunday|date('Y-m-d')}) }}">This
                    week </a>
            {% else %}
                <a class="btn btn-outline-primary btn-sm mt-2"
                   href="{{ path('tennis_court_availability_index', {'minDate': today|date('Y-m-d'), 'maxDate': nextSunday|date('Y-m-d')}) }}">This
                    week</a>
            {% endif %}



            {% if minDate == monday2|date('Y-m-d') %}
                <a class="btn btn-primary btn-sm mt-2"
                   href="{{ path('tennis_court_availability_index', {'minDate': monday2|date('Y-m-d'), 'maxDate': sunday2|date('Y-m-d')}) }}">Next
                    week</a>
            {% else %}
                <a class="btn btn-outline-primary btn-sm mt-2"
                   href="{{ path('tennis_court_availability_index', {'minDate': monday2|date('Y-m-d'), 'maxDate': sunday2|date('Y-m-d')}) }}">Next
                    week</a>
            {% endif %}


            {% if minDate == monday3|date('Y-m-d') %}
                <a class="btn btn-primary btn-sm mt-2"
                   href="{{ path('tennis_court_availability_index', {'minDate': monday3|date('Y-m-d'), 'maxDate': sunday3|date('Y-m-d')}) }}">Following
                    week</a>
            {% else %}
                <a class="btn btn-outline-primary btn-sm mt-2"
                   href="{{ path('tennis_court_availability_index', {'minDate': monday3|date('Y-m-d'), 'maxDate': sunday3|date('Y-m-d')}) }}">Following
                    week</a>
            {% endif %}
        </div>
        <div class="col-md-4">
            {% if minDate is null %}
                <strong>Date range: </strong> {{ lastMonday |date('d-M-Y') }} - {{ nextSunday |date('d-M-Y')}}
            {% else %}
                <strong>Date range: </strong>  {{ minDate|date('d-M-Y') }} - {{ maxDate|date('d-M-Y') }}
            {% endif %}
        </div>
    </div>

    <hr>

    {% for date in dates %}
        <h3 style="color: blue;">{{ date.date |date('D d-M-Y') }}</h3>
        <table class="table">
            <thead>
            <tr>
                <th style="text-align: right">Hour</th>
                {% for venue in tennis_venues %}
                    <th style="text-align: right" title="{{ venue.address }}">
                        <a target="_blank" href={{ venue.weblink }}>{{ venue.venue }} </a>
                            <a target="_blank" href={{ venue.maplink }}><i style="font-size: 15px" class="fas fa-map-marker"></i></a>
                    </th>
                {% endfor %}
            </tr>
            </thead>


            <tbody>
            {% for hour in hours %}
                <tr>
                    <td style="text-align: right" data-sort="{{ hour.sort }}"><b>{{ hour.hour }}</b></td>
                    {% for venue in tennis_venues %}
                        {% set availability = "Not scraped" %}
                        <td style="text-align: center">
                            {% for tennis_court_availability in tennis_court_availabilities %}
                                {% if tennis_court_availability.date == date.date and tennis_court_availability.hour == hour.hour and tennis_court_availability.venue.id == venue.id %}
                                    {% set flag=1 %}
                                    {% set availability= tennis_court_availability.available %}
                                {% endif %}
                            {% endfor %}
                            {{ availability }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr>
    {% endfor %}


    <br>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
    <a class="btn btn-outline-success" href="{{ path('tennis_court_availability_new') }}">New</a>
    {% endif %}
    <br>
    <br>
    <br>

{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 50,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
