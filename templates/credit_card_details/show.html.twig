{% extends 'base.html.twig' %}

{% block title %}Credit Card Details{% endblock %}

{% block body %}
    <h1 style="color: red">Credit Card Details</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>CardNumber</th>
                <td>{{ credit_card_detail.cardNumber }}</td>
            </tr>
            <tr>
                <th>CardExpiry</th>
                <td>{{ credit_card_detail.cardExpiry }}</td>
            </tr>
            <tr>
                <th>CardCVC</th>
                <td>{{ credit_card_detail.cardCVC }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-success btn-sm mt-2" href="{{ path('credit_card_details_index') }}">Return to list</a>

    <a class="btn btn-danger btn-sm mt-2" href="{{ path('credit_card_details_edit', {'id': credit_card_detail.id}) }}">Edit</a>

    {{ include('credit_card_details/_delete_form.html.twig') }}
{% endblock %}
