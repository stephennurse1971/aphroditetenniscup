{% extends 'base.html.twig' %}

{% block title %}Asset Classes{% endblock %}

{% block body %}
    <h1 style="color: red">Asset Classes</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Asset Class</th>
            </tr>
        </thead>
        <tbody>
        {% for asset_class in asset_classes %}
            <tr>
                <td>{{ asset_class.id }}</td>
                <td>
                    <a href="{{ path('asset_classes_edit', {'id': asset_class.id}) }}">{{ asset_class.assetClass }}</a>
                </td>

            </tr>
            {% endfor %}
        </tbody>
    </table>
<br>
<br>
<br>
    <a class="btn btn-success btn-sm" href="{{ path('asset_classes_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc'], [1, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
