{% extends 'base.html.twig' %}

{% block title %}Asset Classes{% endblock %}

{% block body %}
    <h1 style="color: red">Asset Classes</h1>

    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Id</th>
            <th>Asset Class</th>
            <th>Show Tax Years</th>
            <th>Show Share Prices</th>
            <th>Show Docs</th>

        </tr>
        </thead>
        <tbody>
        {% for asset_class in asset_classes %}
            <tr>
                <td>{{ asset_class.id }}</td>
                <td>
                    <a href="{{ path('asset_classes_edit', {'id': asset_class.id}) }}">{{ asset_class.assetClass }}</a>
                </td>
                <td style="text-align: center">
                    {% if asset_class.showTaxYearDetails == 1 %}
                        <i style="color: green" class="fa fa-check"></i>
                    {% else %}
                        <i style="color: red" class="fa fa-remove"></i>
                    {% endif %}
                </td>

                <td style="text-align: center">
                    {% if asset_class.showSharePrices == 1 %}
                        <i style="color: green" class="fa fa-check"></i>
                    {% else %}
                        <i style="color: red" class="fa fa-remove"></i>
                    {% endif %}
                </td>
                <td style="text-align: center">
                    {% if asset_class.showDocs == 1 %}
                        <i style="color: green" class="fa fa-check"></i>
                    {% else %}
                        <i style="color: red" class="fa fa-remove"></i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <br>
    <br>
    <a class="btn btn-success btn-sm" href="{{ path('asset_classes_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc'], [1, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
