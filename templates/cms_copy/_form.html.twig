<style>
    .ck-editor__editable {
        min-height: 600px;
        max-height: 600px
    }
</style>
{{ form_start(form) }}

<div class="row">
    <div class="col-md-3">
        <h2>Names</h2>
        {{ form_row(form.name) }}
        {{ form_row(form.pageTitle) }}
        {{ form_row(form.hyperlinks) }}
    </div>
    <div class="col-md-3">
        <button class="btn btn-success btn-sm">{{ button_label|default('Save') }}</button>
        <a class="btn btn-outline-info btn-sm" href="{{ path('cms_copy_index') }}">Return to list</a>
    </div>
</div>


<h2>Titles</h2>
<div class="row">
    <div class="col-md-3">
        {{ form_row(form.contentTitle) }}
    </div>
    <div class="col-md-3">
        {{ form_row(form.contentTitleFR) }}
    </div>
    <div class="col-md-3">
        {{ form_row(form.contentTitleDE) }}
    </div>
</div>


<h2>Content</h2>
<div class="row">
    <div class="col-md-10">
        {{ form_row(form.contentText) }}
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        {{ form_row(form.contentTextFR) }}
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        {{ form_row(form.contentTextDE) }}
    </div>
</div>


<button class="btn btn-success btn-sm">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

{% block additionaljs %}
    <script>
        ClassicEditor
            .create(document.querySelector('#cms_copy_contentText'));

        ClassicEditor
            .create(document.querySelector('#cms_copy_contentTextFR'));

        ClassicEditor
            .create(document.querySelector('#cms_copy_contentTextDE'));
    </script>
{% endblock %}






















