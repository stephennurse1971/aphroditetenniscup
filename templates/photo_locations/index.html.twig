{% extends 'base.html.twig' %}

{% block title %}Photos: Locations{% endblock %}

{% block body %}
    <h1 style="color: red">Photos: Locations & Viewers</h1>

    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Date</th>
            <th>Location</th>
            <th>Public/Private</th>
            <th>Users <a target="_blank" href="{{path('user_index')}}">+</a>
            </th>
            <th>Photos</th>
        </tr>
        </thead>
        <tbody>

        {% for photo_location in photo_locations %}
            <tr>
                <td>{{ photo_location.date |date('M-Y')}}</td>
                <td>
                    <a href="{{ path('photo_locations_edit', {'id': photo_location.id}) }}">{{ photo_location.location }}</a>
                </td>
                <td>{{ photo_location.publicPrivate }}</td>
                <td>
                   {% for user_id in photo_location.enabledUsers %}
                       {% set user = FindUser.getUser(user_id) %}
                       {% if user is not null %}
                    <a href="{{ path('user_edit',{id:user.id}) }}" >  {{ user.fullName }}, </a>
                       {% endif %}
                    {% endfor %}
                </td>
                <td> <a target="_blank" class="btn btn-outline-primary btn-sm" href="{{ path('show_photos_by_location', { 'locationName':photo_location.location}) }}">Photos</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm mt-2" href="{{ path('photo_locations_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 50,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}