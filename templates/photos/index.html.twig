{% extends 'base.html.twig' %}

{% block title %}Photos Index{% endblock %}

{% block body %}

    <div class="row">
        {% if is_granted ('ROLE_ADMIN') %}
            <h2 style="color: red">
                <a href="{{ path('photo_locations_index') }}">Locations</a>
            </h2>
            <a href="{{ path('photo_locations_new') }}">+</a>
        {% else %}
            <h2 style="color: red">
                Locations
            </h2>
        {% endif %}
    </div>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-danger btn-sm" href="{{ path('photos_delete_all_files_in_public_photos') }}">Delete All Photos
        </a>
    {% endif %}

    <div class="row">
        <div class="col-6">
            <table class="table table-responsive">
                <thead>
                <tr style="background-color: lightgrey">
                    <th style="text-align: left">Private</th>
                    <th style="text-align: left">Date</th>
                    <th style="text-align: left">#</th>
                    <th style="text-align: left">Access</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for location in locations_private %}
                    <tr>
                        {% if app.user is not null %}
                            {% if location.publicPrivate =="Private" %}
                                {% if app.user.id in location.enabledUsers or (is_granted('ROLE_ADMIN')) %}
                                    <td style="text-align: left">
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a target="_blank"
                                               href="{{ path('photo_locations_edit', { id: location.id }) }}">{{ location.location }}</a>
                                        {% else %}
                                            {{ location.location }}
                                        {% endif %}
                                    </td>
                                    <td style="text-align: right"
                                        data-sort="{{ location.date|date('Y-m-d') }}">{{ location.date|date('M-Y') }}</td>
                                    <td style="text-align: right">
                                        {{ CountPhotos.calculateTotalPhotos(location) }}
                                    </td>
                                    <td style="text-align: left">
                                        {% for user_id in location.enabledUsers %}
                                            {% set user = FindUser.getUser(user_id) %}
                                            {% if user is not null %}
                                                  {{ user.fullName }},
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td style="text-align: center">
                                        <a title="Private" class="btn btn-outline-danger btn-sm" target="_blank"
                                           href="{{ path('show_photos_by_location', { location: location.location, author: 'All', format: 'Full' }) }}">
                                            <i class="fa fa-picture-o"></i>
                                        </a>
                                    </td>
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-6">
            <table class="table table-responsive">
                <thead>
                <tr style="background-color: lightgrey">
                    <th style="text-align: left">Public</th>
                    <th style="text-align: left">Date</th>
                    <th style="text-align: left">#</th>
                    <th style="text-align: right">Access</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for location in locations_public %}
                    <tr>
                        <td style="text-align: left">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a target="_blank"
                                   href="{{ path('photo_locations_edit', { id: location.id }) }}">{{ location.location }}</a>
                            {% else %}
                                {{ location.location }}
                            {% endif %}
                        </td>
                        <td style="text-align: right"
                            data-sort="{{ location.date|date('Y-m-d') }}">{{ location.date|date('M-Y') }}</td>
                        <td style="text-align: right">
                            {{ CountPhotos.calculateTotalPhotos(location) }}
                        </td>
                        <td style="text-align: right">..</td>
                        <td style="text-align: center">
                            <a title="Private" class="btn btn-outline-danger btn-sm" target="_blank"
                               href="{{ path('show_photos_by_location', { location: location.location, author: 'All', format: 'Full' }) }}">
                                <i class="fa fa-picture-o"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[1, 'asc'], [0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
