{% extends 'base.html.twig' %}

{% block title %}Photos index{% endblock %}

{% block body %}
    <h1 style="color: red">Photos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>PhotoFile</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.date ? photo.date|date('Y-m-d') : '' }}</td>
                <td>{{ photo.photoFile }}</td>
                <td>
                    <a class="btn btn-outline-primary btn-sm mt-2" href="{{ path('photos_show', {'id': photo.id}) }}">Show</a>
                    <a class="btn btn-outline-danger btn-sm mt-2" href="{{ path('photos_edit', {'id': photo.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm mt-2 " href="{{ path('photos_new') }}">New</a>
{% endblock %}
