{% extends 'base.html.twig' %}

{% block title %}Photos Index{% endblock %}

{% block body %}

    <div class="row">
        {% if is_granted ('ROLE_ADMIN') %}
            <h2 style="color: red">
                <a href="{{ path('photo_locations_index') }}">Locations</a>
            </h2>
            <a href="{{ path('photo_locations_new') }}">+</a>
        {% else %}
            <h2 style="color: red">
                Locations
            </h2>
        {% endif %}
    </div>

    <div class="row">
        <div class="col-1">
            <table class="table">
                <thead>
                <tr>
                    <th style="text-align: left">Private</th>
                </tr>
                </thead>
                <tbody>
                {% for location in locations_private %}
                    <tr>
                        <td style="text-align: left">
                            {% if app.user is not null %}
                                {% if location.publicPrivate =="Private" %}
                                    {% if app.user.id in location.enabledUsers or (is_granted('ROLE_ADMIN')) %}
                                        <a title="Private" class="btn btn-outline-danger btn-sm" target="_blank"
                                           href="{{ path('show_photos_by_location', { 'locationName':location.location}) }}">{{ location.location }}</a>
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-1">
            <table class="table">
                <thead>
                <tr>
                    <th style="text-align: left">Public</th>
                </tr>
                </thead>
                <tbody>
                {% for location in locations_public %}
                    <tr>
                        <td style="text-align: left">
                            {% if location.publicPrivate =="Public" %}
                                <a title="Public" class="btn btn-outline-success btn-sm" target="_blank"
                                   href="{{ path('show_photos_by_location', { 'locationName':location.location}) }}">{{ location.location }}</a>
                            {% endif %}
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc'], [1, 'desc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
