{{ form_start(form) }}

<h2>Field names</h2>
<div class="row">
    <div class="col-md-2">
        {{ form_row(form.name) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.sitePage) }}
    </div>

    <div class="col-md-2">
        {{ form_row(form.heading) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.link) }}
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        {{ form_row(form.title) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.titleFR) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.titleDE) }}
    </div>

</div>


<h2>Photo file</h2>

<div class="row">
    <div class="col-md-2">
        {% if cms_photo.id is not empty %}
            <a target="_blank" href="{{ path('cms_view_photo', {'id': cms_photo.id}) }}">{{ cms_photo.photo }}</a>
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        {{ form_row(form.photo) }}
    </div>
    <div class="col-md-2">
        {% if cms_photo.photo is not empty %}
            <a class="btn btn-sm btn-danger" href="{{ path('cms_delete_photo', {'id': cms_photo.id}) }}">Delete
                photo</a>
        {% endif %}
    </div>
</div>

<hr>

<button class="btn btn-success btn-sm">{{ button_label|default('Save') }}</button>

<br>
{{ form_end(form) }}
