{{ form_start(form) }}
<div class="row">
    <div class="col-2">
        {{ form_row(form.date) }}
        {{ form_row(form.weight) }}
    </div>

    <div class="col-2">
        {{ form_row(form.diastolic) }}
        {{ form_row(form.systolic) }}
        {{ form_row(form.heartRate) }}
    </div>
</div>

<button class="btn btn-success btn-sm">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
