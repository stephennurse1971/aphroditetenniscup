{% extends '../../base.html.twig' %}

{% block title %}Health{% endblock %}

{% block body %}
    <h1 style="color: red">Health</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ health.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ health.date ? health.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ health.weight }}</td>
            </tr>
            <tr>
                <th>Diastolic</th>
                <td>{{ health.diastolic }}</td>
            </tr>
            <tr>
                <th>Systolic</th>
                <td>{{ health.systolic }}</td>
            </tr>
            <tr>
                <th>HeartRate</th>
                <td>{{ health.heartRate }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('health_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('health_edit', {'id': health.id}) }}">Edit</a>

    {{ include('health/_delete_form.html.twig') }}
{% endblock %}
