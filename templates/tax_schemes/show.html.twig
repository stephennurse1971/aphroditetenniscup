    <h1 style="color: red">Tax Schemes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tax_scheme.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tax_scheme.name }}</td>
            </tr>
            <tr>
                <th>PurchaseIncomeOffset</th>
