{{ form_start(form) }}
<div class="row">
    <div class="col-md-3">
        <h2>Receipt Upload</h2>

        {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
            {{ form_row(form.date) }}
            {{ form_row(form.vendor) }}
            {{ form_row(form.amount) }}

        {% else %}
            {{ form_row(form.date,{'attr':{'readonly':'true'}}) }}
            {{ form_row(form.vendor,{'attr':{'readonly':'true'}}) }}
            {{ form_row(form.amount,{'attr':{'readonly':'true'}}) }}

        {% endif %}
    </div>
    <div class="col-md-6">
        <h2>Comments</h2>

        {% if is_granted ('ROLE_SERPENTINE')%}
            {{ form_row(form.serpentimeComments) }}
        {% else %}
            {{ form_row(form.serpentimeComments,{'attr':{'readonly':'true'}}) }}
        {% endif %}

        {% if is_granted ('ROLE_HMRC')%}
            {{ form_row(form.hmrcComments) }}
        {% else %}
            {{ form_row(form.hmrcComments,{'attr':{'readonly':'true'}}) }}
        {% endif %}

    </div>

</div>
<div class="col-8 mb-1">
    {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
        {{ form_row(form.attachments) }}
    {% else %}
        {{ form_row(form.attachments,{'attr':{'readonly':'true'}}) }}
    {% endif %}
</div>


<button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
