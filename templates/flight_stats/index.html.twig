{% extends 'base.html.twig' %}

{% block title %}Flight Prices{% endblock %}

{% block body %}
    <h1 style="color: red">Flight Prices</h1>

    <a class="btn btn-danger btn-sm" href="{{ path('flight_stats_delete_all') }}">Delete All</a>
    <a class="btn btn-primary btn-sm" href="{{ path('flight_stats_index') }}">Scrape</a>
    <br>
    <br>
    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Date</th>
            <th>Flight From</th>
            <th>Flight To</th>
            <th>Lowest Price</th>
            <th>#</th>
        </tr>
        </thead>
        <tbody>
        {% for flight_stat in flight_stats %}
            <tr>
                <td style="text-align: left"
                    data-sort={{ flight_stat.date| date('Y-m-d') }}>{{ flight_stat.date | date('d-M-Y') }}</td>
                <td style="text-align: center">{{ flight_stat.flightFrom }}</td>
                <td style="text-align: center">{{ flight_stat.flightTo }}</td>
                <td style="text-align: right">{{ flight_stat.lowestPrice|number_format(2, '.', ',') }}</td>
                <td>
                    <a class="btn btn-outline-primary btn-sm"
                       href="{{ path('flight_stats_show', {'id': flight_stat.id}) }}">Show</a>
                    <a class="btn btn-outline-danger btn-sm"
                       href="{{ path('flight_stats_edit', {'id': flight_stat.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm" href="{{ path('flight_stats_new') }}">New</a>
{% endblock %}
