{% extends 'base.html.twig' %}

{% block title %}Interests{% endblock %}

{% block body %}
    <h1>Interests</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ interest.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ interest.name }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ interest.rank }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ interest.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CmsText1</th>
                <td>{{ interest.cmsText1 }}</td>
            </tr>
            <tr>
                <th>CmsText2</th>
                <td>{{ interest.cmsText2 }}</td>
            </tr>
            <tr>
                <th>CmsText3</th>
                <td>{{ interest.cmsText3 }}</td>
            </tr>
            <tr>
                <th>CmsPhoto1</th>
                <td>{{ interest.cmsPhoto1 }}</td>
            </tr>
            <tr>
                <th>CmsPhoto2</th>
                <td>{{ interest.cmsPhoto2 }}</td>
            </tr>
            <tr>
                <th>CmsPhoto3</th>
                <td>{{ interest.cmsPhoto3 }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('interests_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('interests_edit', {'id': interest.id}) }}">Edit</a>

    {{ include('interests/_delete_form.html.twig') }}
{% endblock %}
