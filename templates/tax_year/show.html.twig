{% extends 'base.html.twig' %}

{% block title %}TaxYear{% endblock %}

{% block body %}
    <h1>TaxYear</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tax_year.id }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ tax_year.startDate ? tax_year.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ tax_year.endDate ? tax_year.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Days</th>
                <td>{{ tax_year.days }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-secondary btn-sm mt-2" href="{{ path('tax_year_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm mt-2" href="{{ path('tax_year_edit', {'id': tax_year.id}) }}">Edit</a>

    {{ include('tax_year/_delete_form.html.twig') }}
{% endblock %}
