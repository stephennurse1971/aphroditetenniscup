{% extends 'base.html.twig' %}
{% block title %}Users: {{ role}} {% endblock %}
{% block body %}
    <h1><span class="text-danger">Users: {{ role }}</span></h1>

    {% if is_granted('ROLE_SUPER_ADMIN')  %}
        <a class="btn btn-danger btn-sm" href="{{ path('app_home') }}">Delete all non-Admin Users</a>
        <a class="btn btn-danger btn-sm" href="{{ path('/user/delete_all_AX') }}">Delete all non-Admin AX Users</a>
        <a class="btn btn-danger btn-sm" href="{{ path('/user/delete_all_Personal') }}">Delete all non-Admin Personal Users</a>
    {% endif %}

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Company</th>
            <th title="Home/Business">Address</th>
            <th>Mobile(s)</th>
            <th>Landlines</th>
            <th>Email(s)</th>
            <th>www</th>
            <th>Birthday</th>
            <th width="150px">Notes</th>
            <th>Admin</th>
            <th>Family</th>
            <th>Contact</th>
            <th>Guest</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th style="color: red;">Plain Password</th>
                <th>#</th>
                <th>#</th>
                <th>Invite email</th>
            {% endif %}
        </tr>
        </thead>

        <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                            <b><a target="_blank"
                                  href="{{ path('user_edit', {'id': user.id}) }}">  {{ user.fullName }}</a></b>
                        {% else %}
                            <b>{{ user.fullName }}</b>
                        {% endif %}
                    </td>
                    <td>{{ user.company }}</td>
                    <td align="center">
                        {% if user.homeAddress is not empty %}
                            <i class="fa fa-home" title="{{ user.homeAddress }}"></i>
                        {% endif %}

                        {% if user.homeAddress is not empty and user.businessAddress %} / {% endif %}

                        {% if user.businessAddress is not empty %}
                            <i class="fa fa-industry" title="{{ user.businessAddress }}"></i>
                        {% endif %}
                    </td>

                    <td align="center">
                        {% if user.mobile is not empty %}
                            <i class="fa fa-phone" title="{{ user.mobile }}"></i>
                        {% endif %}

                        {% if user.mobile2 is not empty %} /
                            <i class="fa fa-phone" title="{{ user.mobile2 }}"></i>
                        {% endif %}
                    </td>

                    <td align="center">
                        {% if user.businessPhone is not empty %}
                            <i class="fa fa-phone" title="{{ user.businessPhone }}"></i>
                        {% endif %}

                        {% if user.homePhone is not empty %} /
                            <i class="fa fa-phone" title="{{ user.homePhone }}"></i>
                        {% endif %}
                    </td>

                    <td align="center">
                        {% if user.email is not empty %}
                            <a title="{{ user.email }}" href="mailto:{{ user.email }}">
                                <i class="fa fa-envelope-open-o"></i>
                            </a>
                        {% endif %}

                        {% if user.email2 is not empty %}
                            <a title="{{ user.email2 }}" href="mailto:{{ user.email2 }}">
                                <i class="fa fa-envelope-open-o"></i>
                            </a>
                        {% endif %}

                        {% if user.email3 is not empty %} /
                            <a title="{{ user.email3 }}" href="mailto:{{ user.email3 }}">
                                <i class="fa fa-envelope-open-o"></i>
                            </a>
                        {% endif %}
                    </td>

                    <td align="center">
                        {% if user.webPage is not empty %}
                            <a title="{{ user.webPage }}" href="{{ user.webPage }}">
                                <i class="fa fa-globe"></i>
                            </a>
                        {% endif %}
                    </td>

                    <td align="center" data-sort="{{ user.birthday|date('m-d') }}">
                        {% if user.birthday is not empty %}
                            {{ user.birthday |date('d-M-Y') }}
                        {% endif %}
                    </td>

                    <td>{{ user.notes }}</td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_SUPER_ADMIN' or role == 'ROLE_ADMIN' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            <i class="fa fa-circle" style="color: green; text-align: right"></i>
                        {% else %}
                            <i class="fa fa-circle" style="color: red; text-align: right"></i>
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_FAMILY' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_FAMILY", 'active': '1'}) }}"><i
                                            class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_FAMILY", 'active': '1'}) }}"><i
                                            class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_CONTACT' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_CONTACT", 'active': '1'}) }}"><i
                                            class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_CONTACT", 'active': '1'}) }}"><i
                                            class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_GUEST' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_GUEST", 'active': '1'}) }}"><i
                                            class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_GUEST", 'active': '1'}) }}"><i
                                            class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>{{ user.plainPassword }}</td>
                    {% endif %}
                    <td>
                        {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                        <form class="d-inline" method="post" action="{{ path('user_delete', {'id': user.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                        </form>
                    </td>
                    <td>
                        <a class="btn btn-success btn-sm" href="{{ path('user_invite', {'userid':user.id}) }}">Invite
                            email</a>
                        {% endif %}
                    </td>

                    <td>{{ user.inviteDate|date('d-M-Y') }}</td>

                </tr>
            {% endfor %}


        </tbody>
    </table>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-success mt-3" href="{{ path('user_new') }}">New user</a>
        <a class="btn btn-primary mt-3" href="{{ path('userimport') }}">Import users</a>
    {% endif %}

{% endblock %}
{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[7, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}