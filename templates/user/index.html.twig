{% extends 'base.html.twig' %}
{% block title %}User index{% endblock %}
{% block body %}
    <h1><span class="text-danger">Users: {{ role_title }}</span></h1>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Email2</th>
            <th>Mobile1</th>
            <th>Mobile2</th>
            <th>Admin</th>
            <th>Tennis</th>
            <th>Family</th>

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <th style="color: red;">Plain Password</th>
            {% endif %}
            <th>Edit</th>
        </tr>
        </thead>

        <tbody>
        {% if role=='All' %}
            {% for user in users %}
                <tr>
                    <td><b>{{ user.fullName }}</b></td>
                    <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                    <td><a href="mailto:{{ user.email2 }}">{{ user.email2 }}</a></td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.mobile2 }}</td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_SUPER_ADMIN' or role == 'ROLE_ADMIN' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            <i class="fa fa-circle" style="color: green; text-align: right"></i>
                        {% else %}
                            <i class="fa fa-circle" style="color: red; text-align: right"></i>
                        {% endif %}
                    </td>

                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_TENNIS_PLAYER' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            <i class="fa fa-circle" style="color: green; text-align: right"></i>
                        {% else %}
                            <i class="fa fa-circle" style="color: red; text-align: right"></i>
                        {% endif %}
                    </td>

                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_FAMILY' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            <i class="fa fa-circle" style="color: green; text-align: right"></i>
                        {% else %}
                            <i class="fa fa-circle" style="color: red; text-align: right"></i>
                        {% endif %}
                    </td>



                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>{{ user.plainPassword }}</td>
                    {% endif %}
                    <td>
                        {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                            <a class="btn btn-outline-danger btn-sm"
                               href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        {% endif %}

        <!-- user by specific role -->
        {% if role != 'All' %}
            {% for user in users %}
                {% for matchrole in user.roles %}
                    {% if matchrole == role %}
                        <tr>
                            <td><b>{{ user.fullName }}</b></td>
                            <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                            <td><a href="mailto:{{ user.email2 }}">{{ user.email2 }}</a></td>
                            <td>{{ user.mobile }}</td>
                            <td>{{ user.mobile2 }}</td>



                            <td style="text-align: center">
                                {% set flag = 0 %}
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_SUPER_ADMIN' or role == 'ROLE_ADMIN' %}
                                        {% set flag = 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if flag == 1 %}
                                    <i class="fa fa-circle" style="color: green; text-align: right"></i>
                                {% else %}
                                    <i class="fa fa-circle" style="color: red; text-align: right"></i>
                                {% endif %}
                            </td>

                            <td style="text-align: center">
                                {% set flag = 0 %}
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_TENNIS_PLAYER' %}
                                        {% set flag = 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if flag == 1 %}
                                    <i class="fa fa-circle" style="color: green; text-align: right"></i>
                                {% else %}
                                    <i class="fa fa-circle" style="color: red; text-align: right"></i>
                                {% endif %}
                            </td>

                            <td style="text-align: center">
                                {% set flag = 0 %}
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_FAMILY' %}
                                        {% set flag = 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if flag == 1 %}
                                    <i class="fa fa-circle" style="color: green; text-align: right"></i>
                                {% else %}
                                    <i class="fa fa-circle" style="color: red; text-align: right"></i>
                                {% endif %}
                            </td>



                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <td>{{ user.plainPassword }}</td>
                            {% endif %}
                            <td>
                                {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                                    <a class="btn btn-outline-danger btn-sm"
                                       href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-success mt-3" href="{{ path('user_new') }}">New user</a>
        <a class="btn btn-primary mt-3" href="{{ path('import') }}">Import users</a>
    {% endif %}

{% endblock %}
{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}