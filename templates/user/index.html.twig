{% extends 'base.html.twig' %}
{% block title %}User index{% endblock %}
{% block body %}
    <h1><span class="text-danger">Users: {{ role_title }}</span></h1>
    <table class="table">
        <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Email2</th>
            <th>Mobile1</th>
            <th>Mobile2</th>
            <th>Admin</th>
            <th>Family</th>
            <th>Accountant</th>
            <th>HMRC</th>
            <th>Serpentine</th>
            <th>Contact</th>
            <th>Guest</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th style="color: red;">Plain Password</th>
                <th>#</th>
                <th>Invite email</th>
            {% endif %}
        </tr>
        </thead>

        <tbody>
        {% if role=='All' %}
            {% for user in users %}
                <tr>
                    <td><b>{{ user.id }}</b></td>
                    <td><b>{{ user.fullName }}</b></td>
                    <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                    <td><a href="mailto:{{ user.email2 }}">{{ user.email2 }}</a></td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.mobile2 }}</td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_SUPER_ADMIN' or role == 'ROLE_ADMIN' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            <i class="fa fa-circle" style="color: green; text-align: right"></i>
                        {% else %}
                            <i class="fa fa-circle" style="color: red; text-align: right"></i>
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_FAMILY' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                 <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_FAMILY", 'active': '1'}) }}"><i class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_FAMILY", 'active': '1'}) }}"><i class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ACCOUNTANT' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_ACCOUNTANT", 'active': '1'}) }}"><i class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_ACCOUNTANT", 'active': '1'}) }}"><i class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>




                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_HMRC' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_HMRC", 'active': '1'}) }}"><i class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_HMRC", 'active': '1'}) }}"><i class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_SERPENTIME' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_SERPENTIME", 'active': '1'}) }}"><i class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_SERPENTIME", 'active': '1'}) }}"><i class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_CONTACT' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_CONTACT", 'active': '1'}) }}"><i class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_CONTACT", 'active': '1'}) }}"><i class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>


                    <td style="text-align: center">
                        {% set flag = 0 %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_GUEST' %}
                                {% set flag = 1 %}
                            {% endif %}
                        {% endfor %}
                        {% if flag == 1 %}
                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: green; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_GUEST", 'active': '1'}) }}"><i class="fa fa-circle" style="color: green; text-align: right"></i></a>
                            {% endif %}
                        {% else %}


                            {% if app.user.id == user.id %}
                                <i class="fa fa-circle" style="color: red; text-align: right"></i>
                            {% else %}
                                <a href="{{ path('user_edit_button', {'id':user.id, 'role': "ROLE_GUEST", 'active': '1'}) }}"><i class="fa fa-circle" style="color: red; text-align: right"></i></a>
                            {% endif %}
                        {% endif %}
                    </td>

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>{{ user.plainPassword }}</td>
                    {% endif %}
                    <td>
                        {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                            <a class="btn btn-outline-danger btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                            <form class="d-inline" method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-danger btn-sm"><i class="fa fa-trash-alt"></i></button>
                            </form>
                            <a class="btn btn-success btn-sm" href="{{ path('user_invite', {'userid':user.id}) }}">Invite email</a>
                        {% endif %}
                    </td>
                    <td>
                        Date
                    </td>
                </tr>
            {% endfor %}
        {% endif %}

        <!-- user by specific role -->
        {% if role != 'All' %}
            {% for user in users %}
                {% for matchrole in user.roles %}
                    {% if matchrole == role %}
                        <tr>
                            <td><b>{{ user.fullName }}</b></td>
                            <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                            <td><a href="mailto:{{ user.email2 }}">{{ user.email2 }}</a></td>
                            <td>{{ user.mobile }}</td>
                            <td>{{ user.mobile2 }}</td>


                            <td style="text-align: center">
                                {% set flag = 0 %}
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_SUPER_ADMIN' or role == 'ROLE_ADMIN' %}
                                        {% set flag = 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if flag == 1 %}
                                    <i class="fa fa-circle" style="color: green; text-align: right"></i>
                                {% else %}
                                    <i class="fa fa-circle" style="color: red; text-align: right"></i>
                                {% endif %}
                            </td>

                            <td style="text-align: center">
                                {% set flag = 0 %}
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_TENNIS_PLAYER' %}
                                        {% set flag = 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if flag == 1 %}
                                    <i class="fa fa-circle" style="color: green; text-align: right"></i>
                                {% else %}
                                    <i class="fa fa-circle" style="color: red; text-align: right"></i>
                                {% endif %}
                            </td>

                            <td style="text-align: center">
                                {% set flag = 0 %}
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_FAMILY' %}
                                        {% set flag = 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if flag == 1 %}
                                    <i class="fa fa-circle" style="color: green; text-align: right"></i>
                                {% else %}
                                    <i class="fa fa-circle" style="color: red; text-align: right"></i>
                                {% endif %}
                            </td>


                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <td>{{ user.plainPassword }}</td>
                            {% endif %}
                            <td>
                                {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                                    <a class="btn btn-outline-danger btn-sm"
                                       href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-success mt-3" href="{{ path('user_new') }}">New user</a>
        <a class="btn btn-primary mt-3" href="{{ path('userimport') }}">Import users</a>
    {% endif %}

{% endblock %}
{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}