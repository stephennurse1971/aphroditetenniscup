{% extends 'base.html.twig' %}
{% block title %}User index{% endblock %}
{% block body %}
    <h1><span class="text-danger">Users: {{ role_title }}</span></h1>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Roles</th>
            <th>PlainPassword</th>
            <th>Password</th>
        </tr>
        </thead>

        <tbody>
        {% if role=='All' %}
            {% for user in users %}
                <tr>
                    <td>
                        {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                            <a href="{{ path('user_edit', {'id': user.id}) }}">{{ user.fullName }}</a>
                        {% else %}
                            {{ user.fullName }}
                        {% endif %}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.mobile }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.plainPassword }}</td>
                    <td>{{ user.password }}</td>
                </tr>
            {% endfor %}
        {% endif %}

        <!-- user by specific role -->
        {% if role != 'All' %}
            {% for user in users %}
                {% for matchrole in user.roles %}
                    {% if matchrole == role %}
                        <tr>
                            <td>
                                {% if is_granted('ROLE_SUPER_ADMIN') or app.user.id==user.id %}
                                    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ user.fullName }}</a>
                                {% else %}
                                    {{ user.fullName }}
                                {% endif %}
                            </td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.mobile }}</td>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            <td>{{ user.plainPassword }}</td>
                            <td>{{ user.password }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-success mt-3" href="{{ path('user_new') }}">New user</a>
        <a class="btn btn-primary mt-3" href="">Import users</a>
    {% endif %}

{% endblock %}
{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}