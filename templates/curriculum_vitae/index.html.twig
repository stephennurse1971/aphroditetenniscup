{% extends 'base.html.twig' %}

{% block title %}CurriculumVitae index{% endblock %}

{% block body %}
    <h1 style="color: red">CVs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Candidate</th>
                <th>Section</th>
                <th>Title</th>
                <th>Date From</th>
                <th>Date To</th>
                <th>Job Description</th>
            </tr>
        </thead>
        <tbody>
        {% for curriculum_vitae in curriculum_vitaes %}
            <tr>
                <td>{{ curriculum_vitae.candidate.fullName }}</td>
                <td>{{ curriculum_vitae.section }}</td>
                <td>
                    <a href="{{ path('curriculum_vitae_edit', {'id': curriculum_vitae.id}) }}">{{ curriculum_vitae.title }}</a>
                </td>
                <td data-sort="{{ curriculum_vitae.date|date('y-m-d') }}">{{ curriculum_vitae.date ? curriculum_vitae.date|date('M-Y') : '' }}</td>
                <td data-sort="{{ curriculum_vitae.dateFinish|date('y-m-d') }}">{{ curriculum_vitae.dateFinish ? curriculum_vitae.dateFinish|date('M-Y') : '' }}</td>
                <td>{{ curriculum_vitae.jobDescription|raw }}</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm" href="{{ path('curriculum_vitae_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 100,
                "order": [[0, 'asc'],[1, 'desc']],
                "paging": false,
                "searching": true,
                "bInfo": true
            });
        });
    </script>
{% endblock datatable %}