{% extends 'base.html.twig' %}

{% block title %}Wine List{% endblock %}

{% block body %}
    <h1 style="color: red">Wine List</h1>
    <a class="btn btn-success btn-sm" href="{{ path('wine_list_new') }}">New</a>
    <table class="table">
        <thead>
        <tr>
            <th>Label</th>
            <th>Name</th>
            <th>Year</th>
            <th>Colour</th>
            <th>Grape</th>
            <th>Description</th>
            <th>Price â‚¬</th>
            <th>Marks</th>
            <th>Supermarket</th>
        </tr>
        </thead>
        <tbody>
        {% for wine_list in wine_lists %}
            <tr>
                {% set loc = asset('/administration/img/winelist')~"/"~wine_list.labelPicture %}
                <td title="{{ wine_list.labelPicture }}">
                    <img height="50" width="50" src="{{ loc }}" class="rounded-circle">
                </td>
                <td>
                    <a href="{{ path('wine_list_edit', {'id': wine_list.id}) }}">{{ wine_list.name }}</a>
                </td>
                <td>{{ wine_list.year }}</td>
                <td>{{ wine_list.colour }}</td>
                <td>{{ wine_list.grape }}</td>
                <td>{{ wine_list.description }}</td>
                <td>{{ wine_list.price }}</td>
                <td>{{ wine_list.marks }}</td>
                <td>{{ wine_list.supermarket }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 100,
                "order": [[0, 'desc'],  [2, 'desc']],
                "paging": false,
                "searching": true,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
