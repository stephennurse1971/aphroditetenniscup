                            <a target="_blank" href="{{ path('cms_copy_edit', {'id': Text1.id}) }}">
                                <i style="color: red" class="fa fa-pen"></i>
                            </a>
                        {% endif %}
                        <p>{{ Text1.contentText|raw }}  </p>
                    </div>

                    <div class="col-lg-6 col-md-6">
                        <div class="justify-content-center d-flex py-1">
                            {% if Photo1.photo is not null %}
                                {% if Photo1.photoOrVideo == "Video" %}
                                    <video class="other-page-image" controls>
                                        <source src="{{ asset('administration/attachments/WebsitePhotos/') }}{{ Photo1.photo }}"
                                                type="video/mp4">
                                    </video>
                                {% else %}
                                    {% set loc = asset('administration/attachments/WebsitePhotos')~"/"~Photo1.photo %}
                                    {% if Photo1.link is not null %}
                                        <a target="_blank" href="{{ Photo1.link }}">
                                            <img class="other-page-image" src="{{ loc }}"></a>
                                    {% else %}
                                        <img class="other-page-image" src="{{ loc }}"></a>
