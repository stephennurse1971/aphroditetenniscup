{% extends 'base.html.twig' %}

{% block title %} {{ Text1.pageTitle }} {% endblock %}

{% block body %}

    <!-- My Service section -->
    <section id="my-service-section" class="default-bg-white">
        <!--  Default space  -->
        <div class="default-space"></div>
        <!--  Default space  -->
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="defult-title">
                        <h4><a target="_blank" href="{{ Text1.hyperlinks }}">{{ Text1.contentTitle|raw }}</a></h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <!------------------ FIRST GROUP OF PHOTOS --------------->

                {% if Photo1.photo is empty %}
                    <div class="col-md-12">
                        <h4>
                            {% if Text1.hyperlinks is empty %}
                                {{ Text1.contentTitle|raw }}
                            {% else %}
                                <a target="_blank" href="{{ Text1.hyperlinks }}">{{ Text1.contentTitle|raw }}</a>
                            {% endif %}
                        </h4>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a target="_blank" href="{{ path('cms_copy_edit', {'id': Text1.id}) }}">
                                <i style="color: red" class="fa fa-pen"></i>
                            </a>
                        {% endif %}
                        <p>{{ Text1.contentText|raw }}  </p>
                    </div>
                {% else %}
                    <div class="col-md-6">
