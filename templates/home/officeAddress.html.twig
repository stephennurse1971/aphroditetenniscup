{% extends 'base.html.twig' %}

{% block title %}{{ CompanyDetails.getCompanyDetails.companyName }}: Address {% endblock %}

{% block body %}

    <h3 style="color: red">Club address</h3>
    <div class="row">
        <div class="col-12">
            <b>Address is: </b>
            {{ CompanyDetails.getCompanyDetails.companyAddressStreet|raw }},
            {{ CompanyDetails.getCompanyDetails.companyAddressTown|raw }},
            {{ CompanyDetails.getCompanyDetails.companyAddressCity|raw }}
            {{ CompanyDetails.getCompanyDetails.companyAddressPostalCode|raw }}
            <br>
            <br>
            <br>
            <iframe src="{{ CompanyDetails.getCompanyDetails.companyAddressMapLink|raw }}"
                    width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            <br>
            <br>
            <br>
            <b>Getting here:</b> <br>
            <li>
                {{ CompanyDetails.getCompanyDetails.companyAddressInstructions }}
            </li>
        </div>
    </div>


     {% endblock %}