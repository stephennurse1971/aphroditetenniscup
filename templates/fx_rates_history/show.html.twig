{% extends 'base.html.twig' %}

{% block title %}Fx Rates History{% endblock %}

{% block body %}
    <h1 style="color: red">FX Rates History</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fx_rates_history.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ fx_rates_history.date ? fx_rates_history.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ fx_rates_history.currency }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ fx_rates_history.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('fx_rates_history_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('fx_rates_history_edit', {'id': fx_rates_history.id}) }}">Edit</a>

    {{ include('fx_rates_history/_delete_form.html.twig') }}
{% endblock %}
