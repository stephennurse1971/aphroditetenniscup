{% extends 'base.html.twig' %}

{% block title %}New Payments{% endblock %}

{% block body %}
    <h1 style="color: red">New Payments</h1>

    {{ include('payments/_form.html.twig') }}

    <a class="btn btn-outline-primary btn-sm mt-2" href="{{ path('payments_index') }}">Return to list</a>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
    <script>

        $("input.datetime").flatpickr({
            altInput: true,
            altFormat: "D j F Y",
            {#defaultDate: "{{ date.format('Y-m-d H:i') }}",#}
            time_24hr: true,
            enableTime: false,
            noCalendar: false,
            dateFormat: "Y-m-d",
            minuteIncrement: 15
            //minDate: "today",
        });

    </script>
{% endblock javascripts %}