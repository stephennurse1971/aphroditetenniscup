{% extends 'base.html.twig' %}

{% block title %}Payments{% endblock %}

{% block body %}

    <h1 style="color: red">Balance</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Player</th>
            <th>Owed</th>
            <th>Paid</th>
            <th>Outstanding</th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.fullName}}</td>
                <td>{{ paymentsMadeService.TotalBookingsCost(player.id)|number_format(2, '.', ',') }}</td>
                <td>{{ paymentsMadeService.TotalPaymentsMade(player.id)|number_format(2, '.', ',') }}</td>
                <td>{{ '300'|number_format(2, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>

    <h1 style="color: red">Payments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Player</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td><a href="{{ path('payments_edit', {'id': payment.id}) }}">{{ payment.date ? payment.date|date('d-M-Y') : '' }}</a></td>
                <td>{{ payment.user.fullName }}</td>
                <td>{{ payment.amount|number_format(2, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<hr>
    <a class="btn btn-outline-success btn-sm mt-2" href="{{ path('payments_new') }}">New</a>
{% endblock %}


{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc'] ],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
