<style>
    .ck-editor__editable {
        min-height: 600px;
        max-height: 600px
    }
</style>
{{ form_start(form) }}
<div class="row">
    <div class="col-2">
        {{ form_row(form.product) }}
    </div>
    <div class="col-2">
        {{ form_row(form.title) }}
    </div>
    <div class="col-2">
        {{ form_row(form.rank) }}
    </div>
    <div class="col-2">
        {{ form_row(form.image) }}
    </div>
</div>

<div class="row">
    <div class="col-8">
        {{ form_row(form.content) }}
    </div>
</div>
<button class="btn btn-success btn-sm">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
