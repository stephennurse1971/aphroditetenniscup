<style>
    .ck-editor__editable {
        min-height: 1100px;
    }
</style>

{{ form_start(form) }}
<div class="row">
    <div class="col-md-3">
        <h2></h2>
        {{ form_row(form.project) }}
        {{ form_row(form.accessTo) }}
        {{ form_row(form.priority) }}

        <button class="btn btn-success btn-sm mt-2">{{ button_label|default('Save') }}</button>
        <div class="mt-1"></div>
    </div>
</div>
{{ form_end(form) }}

{% block additionaljs %}
    <script>
        ClassicEditor
            .create(document.querySelector('#to_do_list_description'))
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}