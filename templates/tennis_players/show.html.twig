{% extends 'base.html.twig' %}

{% block title %}Tennis Players{% endblock %}

{% block body %}
    <h1 style="color: red">Tennis Players</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Name</th>
                <td>{{ tennis_player.name }}</td>
            </tr>
            <tr>
                <th>Email1</th>
                <td>{{ tennis_player.email1 }}</td>
            </tr>
            <tr>
                <th>Email2</th>
                <td>{{ tennis_player.email2 }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ tennis_player.mobile }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ tennis_player.rank }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm mt-2" href="{{ path('tennis_players_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm mt-2" href="{{ path('tennis_players_edit', {'id': tennis_player.id}) }}">Edit</a>

    {{ include('tennis_players/_delete_form.html.twig') }}
{% endblock %}
