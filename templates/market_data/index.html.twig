{% extends 'base.html.twig' %}

{% block title %}Market Data index{% endblock %}

{% block body %}

    <h1 style="color: red;">Securities - Details</h1>

<div class="row">
    <div class="col-3">
        <a class="btn btn-outline-success btn-sm" target="_blank" href="{{ path('market_data_history_index') }}">Market Data
            History</a>
        <a target="_blank" class="btn btn-success btn-sm" href="{{ path('market_data_new') }}">New</a>
    </div>
    <div class="col-3">
        {% include 'market_data/parts/investmentAsOfDate.html.twig' %}
    </div>
    <div>
        <a target="_blank" class="btn btn-outline-info btn-sm" href="{{ path('loans_bonds_index') }}">Loan/Bond Prices</a>
        <a target="_blank" class="btn btn-outline-info btn-sm" href="{{ path('bank_balances_index') }}">Bank Accounts</a>
    </div>
</div>

    {% for asset_class in asset_classes %}
        <h2>{{ asset_class.assetClass }}
            <a target="_blank" href="{{ path('asset_classes_index') }}">+</a>
        </h2>
        <table class="table table-responsive">
            <thead>
            <tr>
                <th style="width: 250px;">Company</th>
                <th style="text-align: right">Share Price <br> ("As of" Date)</th>
                <th style="width: 50px;">Corporate website</th>
                <th style="width: 50px;">Companies House</th>
                <th>Investor site</th>
                <th>Login</th>
                <th>Password</th>
                <th>#</th>
            </tr>
            </thead>
            <tbody>
            {% for market_data in market_datas %}
                {% if market_data.assetClass.assetClass == asset_class.assetClass %}
                    {% set weblink = 'https://find-and-update.company-information.service.gov.uk/company/'~market_data.companiesHouse %}
                    <tr>


                        <td>
                            <a target="_blank"
                               href="{{ path('market_data_edit', {'id': market_data.id}) }}">{{ market_data.shareCompany }}</a>
                        </td>
                        <td style="text-align: right">
                            Get from History
                        </td>
                        <td style="text-align: center">
                            {% if market_data.weblink is not empty %}
                                <a title="{{ market_data.weblink }}" target="_blank"
                                   href="{{ market_data.weblink }}"><i class="fas fa-globe"
                                                                       style="color:blue; text-align: center"></i></a>
                            {% endif %}
                        </td>

                        <td style="text-align: center">
                            {% if market_data.companiesHouse != "NA" %}
                                <a title={{ weblink }} target="_blank" href={{ weblink }}>
                                    <i class="fas fa-link" style="color:blue; text-align: center"></i></a>
                            {% endif %}
                        </td>
                        <td>
                            {% if  market_data.investorSite is not empty %}
                                {% if  market_data.investorSite starts with 'http' %}
                                    {% set web =  market_data.investorSite %}
                                {% else %}
                                    {% set web = 'https://'~ market_data.investorSite %}
                                {% endif %}
                                <a target="_blank" title="{{ market_data.investorSite }}" href="{{ web }}">
                                    <i class="fas fa-globe"
                                       style="color:blue; text-align: center"></i></a>
                            {% endif %}
                        </td>
                        <td>{{ market_data.login }}</td>
                        <td>{{ market_data.password }}</td>
                        <td>
                            {% if market_data.login is not null %}
                                <a class="btn btn-success btn-sm" target="_blank"
                                   href="{{ market_data.investorSite }}">Login</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
        <br>
        <br>
        <hr>
        <br>
        <br>
        <br>
    {% endfor %}


    <a target="_blank" class="btn btn-success btn-sm mt-2" href="{{ path('market_data_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
