{% extends 'base.html.twig' %}

{% block title %}ProspectEmployer index{% endblock %}

{% block body %}
    <h1 style="color: red">Prospect Employers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employer</th>
                <th>InterviewDate1</th>
                <th>InterviewDate2</th>
                <th>InterviewDate3</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prospect_employer in prospect_employers %}
