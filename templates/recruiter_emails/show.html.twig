{% extends 'base.html.twig' %}

{% block title %}Recruiter Emails{% endblock %}

{% block body %}
    <h1 style="color: red">Recruiter Emails</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ recruiter_email.id }}</td>
        </tr>
        <tr>
            <th>To</th>
            <td>{{ recruiter_email.SendTo }}</td>
        </tr>
        <tr>
            <th>CC</th>
            <td>{{ recruiter_email.SendCC }}</td>
        </tr>
        <tr>
            <th>Bcc</th>
            <td>{{ recruiter_email.SendBcc }}</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td>{{ recruiter_email.subject }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ recruiter_email.body|raw }}</td>
        </tr>
        <tr>
            <th>Attachment</th>

            <td>
                {% if recruiter_email.attachment is not empty %}
                    <a target="_blank" href="{{ path('attachments_viewfile',{id : recruiter_email.id, filetype: 'Recruiter_Email'}) }}">
                        {{ recruiter_email.attachment }}
                    </a>
                {% endif %}
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ recruiter_email.SendDate ? recruiter_email.SendDate|date('d-M-Y H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ recruiter_email.AuthorFullName }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('recruiter_emails_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('recruiter_emails_edit', {'id': recruiter_email.id}) }}">Edit</a>

    <br>
    {{ include('recruiter_emails/_delete_form.html.twig') }}
{% endblock %}
