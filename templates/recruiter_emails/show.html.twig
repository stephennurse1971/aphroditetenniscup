{% extends 'base.html.twig' %}

{% block title %}Recruiter Emails{% endblock %}

{% block body %}
    <h1 style="color: red">Recruiter Emails</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recruiter_email.id }}</td>
            </tr>
            <tr>
                <th>SendTo</th>
                <td>{{ recruiter_email.SendTo }}</td>
            </tr>
            <tr>
                <th>SendCC</th>
                <td>{{ recruiter_email.SendCC }}</td>
            </tr>
            <tr>
                <th>SendBcc</th>
                <td>{{ recruiter_email.SendBcc }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ recruiter_email.subject }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ recruiter_email.body }}</td>
            </tr>
            <tr>
                <th>Attachment</th>
                <td>{{ recruiter_email.attachment }}</td>
            </tr>
            <tr>
                <th>SendDate</th>
                <td>{{ recruiter_email.SendDate ? recruiter_email.SendDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>SendAuthor</th>
                <td>{{ recruiter_email.sendAuthor }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('recruiter_emails_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('recruiter_emails_edit', {'id': recruiter_email.id}) }}">edit</a>

    {{ include('recruiter_emails/_delete_form.html.twig') }}
{% endblock %}
