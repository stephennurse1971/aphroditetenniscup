{% extends 'base.html.twig' %}

{% block title %}Useful URLs{% endblock %}

{% block body %}
    <h1 style="color: red">Useful URLs</h1>
    {% for category in categories %}
        {% if category == categories %}
            <a class="btn btn-outline-danger btn-sm"
               href="{{ path('useful_links_index', {'category':category}) }}">{{ category }}</a>
        {% else %}
            <a class="btn btn-outline-primary btn-sm"
               href="{{ path('useful_links_index', {'category':category}) }}">{{ category }}</a>
        {% endif %}
    {% endfor %}


    <h2>  {{ category }}</h2>
    <table class="table table-responsive" style="width:100%">
        <thead>
        <tr>
            {% if category=="All" %}
                <th class="desktop">Category</th>
            {% endif %}
            <th>Name</th>
            <th class="desktop">Link</th>
            <th class="mobile">Link</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th class="desktop" style="color: red">Login</th>
                <th class="desktop" style="color: red">Password</th>
            {% endif %}
            <th class="mobile">Notes</th>
            <th class="desktop">#</th>
        </tr>
        </thead>
        <tbody>
        {% for useful_link in useful_links %}
            {% if useful_link.category == category or category == "All" %}
                <tr>
                    {% if category=="All" %}
                        <td class="desktop">{{ useful_link.category }}</td>
                    {% endif %}
                    <td>{{ useful_link.name }}</td>
                    <td class="desktop">
                        <a target="_blank" href="{{ useful_link.link }}">{{ useful_link.link }}</a>
                    </td>
                    <td class="mobile">
                        <a target="_blank" href="{{ useful_link.link }}">
                            <i class="fa fa-link"></i></a>
                    </td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td class="desktop">{{ useful_link.login }}</td>
                        <td class="desktop">{{ useful_link.password }}</td>
                    {% endif %}
                    <td class="mobile">{{ useful_link.notes }}</td>
                    <td class="desktop">
                        <a class="btn btn-outline-danger btn-sm" target="_blank"
                           href="{{ path('useful_links_edit', {'id': useful_link.id}) }}">Edit</a>
                    </td>
                </tr>
            {% endif %}

        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm" href="{{ path('useful_links_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 100,
                "order": [[0, 'asc'], [1, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}