{% extends 'base.html.twig' %}

{% block title %}Useful URLs{% endblock %}

{% block body %}
    <h1 style="color: red">Useful URLs</h1>
    <div class="row">
        <div class="col-9">
            <a class="btn btn-outline-primary btn-sm"
               href="{{ path('useful_links_index', {category:'All'}) }}">All</a>
            {% for category in categories %}

                {% if category == category_chosen %}

                    <a class="btn btn-outline-danger btn-sm"
                       href="{{ path('useful_links_index', {category:category}) }}">{{ category }}</a>
                {% else %}
                    <a class="btn btn-outline-secondary btn-sm"
                       href="{{ path('useful_links_index', {category:category}) }}">{{ category }}</a>
                {% endif %}
            {% endfor %}
        </div>
        <div class="col-2">
            {% if is_granted('ROLE_ADMIN') %}
                <a target="_blank" class="btn btn-success btn-sm" href="{{ path('useful_links_new') }}">New</a>
                <br>
            {% endif %}
        </div>
    </div>


    <h2>  {{ category_chosen }}</h2>
    <table class="table table-responsive" style="width:100%">
        <thead>
        <tr>
            {% if category_chosen=="All" %}
                <th class="desktop">Category</th>
            {% endif %}
            <th>Name</th>
            <th class="desktop">Link</th>
            <th class="mobile">Link</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th class="desktop" style="color: red">Login</th>
                <th class="desktop" style="color: red">Password</th>
            {% endif %}
            <th class="mobile">Notes</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th class="desktop"></th>
                <th class="desktop"></th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for useful_link in useful_links %}
            {% if useful_link.category == category_chosen or category_chosen == "All" %}
                {% if useful_link.category !="RT" %}
                    {% include 'useful_links/parts/table_body.html.twig' %}
                {% elseif useful_link.category == 'RT' and app.user == sn %}
                    {% include 'useful_links/parts/table_body.html.twig' %}
                {% endif %}
            {% endif %}

        {% endfor %}
        </tbody>
    </table>


{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 100,
                "order": [[0, 'asc'], [1, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}