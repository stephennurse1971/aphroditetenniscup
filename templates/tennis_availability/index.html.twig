{% extends 'base.html.twig' %}

{% block title %}Tennis Availability index{% endblock %}

{% block body %}
    <h1 style="color: red;">Tennis Availability</h1>

    {% for date in dates %}
        <h3 style="color: blue;">{{ date.date |date('d-M-Y') }}</h3>
        <table class="table">
            <thead>
            <tr>
                <th style="text-align: right">Hour</th>
                {% for venue in tennis_venues %}
                    <th style="text-align: right" title="{{ venue.address }}">
                        <a target="_blank" href={{ venue.weblink }}>{{ venue.venue }}
                            <a target="_blank" href={{ venue.maplink }}><i style="font-size: 15px" class="fas fa-map-marker"></i></a></th>
                {% endfor %}
            </tr>
            </thead>


            <tbody>
            {% for hour in hours %}
                <tr>
                    <td>{{ hour.hour }}</td>
                    {% for venue in tennis_venues %}
                        {% set availability = "Not scraped" %}
                        <td>
                            {% for tennis_availability in tennis_availabilities %}
                                {% if tennis_availability.date == date.date and tennis_availability.hour == hour.hour and tennis_availability.venue.id == venue.id %}
                                    {% set flag=1 %}
                                    {% set availability= tennis_availability.available %}
                                {% endif %}
                            {% endfor %}
                            {{ availability }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr>
    {% endfor %}


    <br>
    <a class="btn btn-outline-success" href="{{ path('tennis_availability_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 50,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
