{% extends 'base.html.twig' %}

{% block title %}Edit Tennis Bookings{% endblock %}

{% block body %}
    <h1 style="color: red">Edit: {{tennis_booking.venue.venue}} on {{tennis_booking.date|date('Y-m-d H:i:s')|date('d-M-Y')}}</h1>

    {{ include('tennis_bookings/_form.html.twig', {'button_label': 'Update'}) }}

    <a class="btn btn-primary btn-sm mt-2" href="{{ path('tennis_bookings_index') }}">Return to list</a>

    {{ include('tennis_bookings/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
    <script>

        $("input.datetime").flatpickr({
            altInput: true,
            altFormat: "D j F Y, H:i",
            {#defaultDate: "{{ market_economic_statistic.publishTime.format('Y-m-d H:i:s') }}",#}
            time_24hr: true,
            enableTime: true,
            noCalendar: false,
            dateFormat: "Y-m-d H:i",
            minuteIncrement: 15
            //minDate: "today",
        });

    </script>
{% endblock javascripts %}