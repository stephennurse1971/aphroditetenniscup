{% extends 'base.html.twig' %}

{% block title %}Introduction Segments{% endblock %}

{% block body %}
    <h1 style="color: red">Introduction: Country specific segments</h1>

    <table class="table">
        <thead>
        <tr>
            <th>User</th>
            <th>Country</th>
            <th style="width: 1500px">Email Segment</th>
            <th>#</th>
        </tr>
        </thead>
        <tbody>
        {% for introduction_segment in introduction_segments %}
            <tr>
                <td>{{ introduction_segment.user.fullName }}</td>
                <td>
                    <a href="{{ path('introduction_segment_edit', {'id': introduction_segment.id}) }}">{{ introduction_segment.country }}</a>
                </td>
                <td>{{ introduction_segment.emailSegment }}</td>
                <td>
                    <form method="post" action="{{ path('introduction_segment_delete', {'id': introduction_segment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ introduction_segment.id) }}">
                        <button class="btn btn-danger btn-sm mt-2">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <br>

    <a class="btn btn-success btn-sm" href="{{ path('introduction_segment_new') }}">New</a>
{% endblock %}


{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "pageLength": 100,
                "order": [[0, 'asc'], [1, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
