<form method="post" action="{{ path('static_text_delete', {'id': static_text.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ static_text.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>
