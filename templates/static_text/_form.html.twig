<style>
    .ck-editor__editable {min-height: 600px;}
</style>

{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        <h2>Homepage</h2>
        {{ form_row(form.homepage1) }}
        {{ form_row(form.homepage2) }}
    </div>
    <div class="col-md-6">
        <h2>Emails</h2>
        {{ form_row(form.emailAccountant) }}
        {{ form_row(form.emailContact) }}
        {{ form_row(form.emailFamily) }}
        {{ form_row(form.emailGuest) }}
    </div>
</div>
<button class="btn btn-success btn-sm mt-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

{% block additionaljs %}
    <script>
        ClassicEditor
            .create(document.querySelector('#static_text_homepage1'))
            .catch(error => {
                console.error(error);
            });

        ClassicEditor
            .create(document.querySelector('#static_text_homepage2'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#static_text_emailAccountant'))
            .catch(error => {
                console.error(error);
            });
        //
        ClassicEditor
            .create(document.querySelector('#static_text_emailContact'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#static_text_emailFamily'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#static_text_emailGuest'))
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}
