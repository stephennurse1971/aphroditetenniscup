<style>
    .ck-editor__editable {
        min-height: 600px;
    }
</style>

{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        <h2 style="color: red">Homepage</h2>
        {{ form_row(form.homepage1) }}
        {{ form_row(form.homepage2) }}
    </div>
    <div class="col-md-6">
        <h2 style="color: red;">Sub Pages</h2>
        {{ form_row(form.webDesign) }}
        {{ form_row(form.aboutSN) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2 style="color: red">Introduction/Emails</h2>
        {{ form_row(form.emailContact) }}
        {{ form_row(form.emailGuest) }}
    </div>
    <div class="col-md-6">
        <h2 style="color: red;">Introduction/Emails</h2>
        {{ form_row(form.emailAccountant) }}
        {{ form_row(form.emailFamily) }}
    </div>
</div>
<button class="btn btn-success btn-sm mt-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

